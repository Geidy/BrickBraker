		//borders
		g.setColor(Color.pink);
		g.fillRect(691, 0, 3, 592);
		
		//the paddle
		g.setColor(Color.green);
		g.fillRect(playerX, 550, 100, 8);
		
		//The ball
		g.setColor(Color.yellow);
		g.fillRect(ballposX, ballposY, 20, 20);
		
	}
	
